<%= simple_form_for @user_wizard, as: :user_wizard, url: validate_step_wizard_path do |f| %>
  <%= f.error_notification %>
  <ol class="breadcrumb">
  <li >Step 1 <%= submit_tag " step2 " %></li>
  <li class='active'>Step 2<%= submit_tag " step3 " %></li>
  <li>Step 3<%= submit_tag " step4 "%></li>
  <li>Step 4</li>
  </ol>

  <%= hidden_field_tag :current_step, 'step2' %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>

  <%= f.submit 'Continue' %>
<% end %>