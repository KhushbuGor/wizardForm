<ol class="breadcrumb">
  <li><%= link_to "Step 1",validate_step_wizard_path(prev_step: 'step3', current_step: 'step1', user_wizard: @user_wizard) %></li>
  <%= link_to "Step 2",validate_step_wizard_path(prev_step: 'step3', current_step: 'step2', user_wizard: @user_wizard) %>
  <li class="active">Step 3<%= link_to " next ", step4_wizard_path%></li>
  <li>Step 4</li>
</ol>

<%= simple_form_for @user_wizard, as: :user_wizard, url: validate_step_wizard_path do |f| %>
  <%= f.error_notification %>

  <%= hidden_field_tag :current_step, 'step3' %>
  <%= f.input :address_1 %>
  <%= f.input :address_2 %>
  <%= f.input :zip_code %>
  <%= f.input :city %>
 

  <%= f.submit 'Continue' %>
<% end %>